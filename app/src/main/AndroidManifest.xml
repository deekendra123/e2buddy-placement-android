<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.placement.prepare.e2buddy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.E2buddyPlacement"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.Home1Activity"></activity>
        <activity android:name=".activity.ViewAnswerActivity" />
        <activity
            android:name=".activity.ResultActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AnswerReviewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.QuestionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.PlacementInstructionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.InstructionActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>